mixin news(url, src, title, label, data, time, comments)
        .news
            a(href='').news__img
                img(src=src alt='')
            .news__content
                h3
                    a(href='') #{title}
                .news__info
                    a(href='').news__label.label #{label}
                    span
                    a(href='')
                        time #{data}
                            span #{time}
                    a(href='').news__comments.comments #{comments}

