mixin news--aside(url, src, title, data, time, comments)
        .news.news--aside
            a(href='').news__img
                img(src=src alt='')
            .news__content
                h3
                    a(href='') #{title}
                .news__info
                    a(href='')
                        time #{data}
                            span #{time}
                    .news__comments.comments #{comments}


